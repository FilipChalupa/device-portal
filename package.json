{
	"name": "react-device-portal-monorepo",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"start": "npm run start:server",
		"build": "npm run build:package && npm run build:storybook",
		"dev": "npm run -w @device-portal/react dev",
		"dev:package": "npm run -w @device-portal/react dev:package",
		"build:package": "npm run -w @device-portal/react build:package",
		"dev:storybook": "npm run -w @device-portal/react dev:storybook",
		"build:storybook": "npm run -w @device-portal/react build:storybook",
		"start:server": "npm run -w @device-portal/server start",
		"dev:server": "npm run -w @device-portal/server dev",
		"test:server": "npm run -w @device-portal/server test",
		"fix": "prettier --check . --write",
		"lint": "prettier --check ."
	},
	"devDependencies": {
		"prettier": "^3.0.3",
		"typescript": "^5.8.2"
	}
}
