{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist",
		"module": "esnext",
		"target": "ES2020",
		"lib": ["es6", "dom", "es2024"],
		"sourceMap": true,
		"jsx": "react-jsx",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"types": ["vite/client"],
		"baseUrl": ".",
		"paths": {
			"@device-portal/client": ["../client/src/index.ts"]
		}
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.stories.tsx",
		"**/*.stories.css",
		"**/stories/**/*"
	]
}
