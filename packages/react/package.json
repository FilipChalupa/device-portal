		"react": "18 || 19"
	},
	"dependencies": {
		"@device-portal/client": "*"
	},
	"devDependencies": {
		"@babel/core": "^7.24.0",
		"@babel/preset-env": "^7.24.0",
		"@babel/preset-react": "^7.24.0",
