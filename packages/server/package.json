{
	"name": "@device-portal/server",
	"version": "0.0.0",
	"description": "WebSocket-based signaling server for WebRTC.",
	"type": "module",
	"main": "dist/main.js",
	"license": "ISC",
	"bin": {
		"device-portal-server": "dist/main.js"
	},
	"scripts": {
		"build": "tsc && node ./scripts/add-shebang.js ./dist/main.js",
		"start": "node dist/main.js",
		"dev": "node --watch -r ts-node/register src/main.ts",
		"test": "tsc --build --dry",
		"prepare": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/FilipChalupa/device-portal.git"
	},
	"keywords": [
		"webrtc",
		"server",
		"signaling",
		"websocket"
	],
	"author": {
		"name": "Filip Chalupa",
		"email": "chalupa.filip@gmail.com",
		"url": "https://www.npmjs.com/~onset"
	},
	"files": [
		"/dist/"
	],
	"dependencies": {
		"hono": "^4.1.0",
		"@hono/node-server": "^1.8.0",
		"@hono/node-ws": "^1.3.0"
	},
	"devDependencies": {
		"typescript": "^5.0.0",
		"ts-node": "^10.9.1",
		"@types/node": "^20.0.0",
		"@types/ws": "^8.5.3"
	}
